
public class Trap {

	
	//plagued rats, theif, caltrops, roadblock
	private String type;
	private String desc;
	
	public Trap(String t){
		type = t;
		switch(t){
		case "Plagued Rats":
			desc = "You open a box and come upon plagued rats! You burnt the box, but not without becoming Diseased: 1/2 HP for a few rounds";
			break;
		case "Theif":
			desc = "You were robbed in your sleep! 10% of your gold was taken!";
			break;
		case "Caltrops":
			desc = "Someone left caltrops in the road! Traveling is taking longer and you have become Slowed.";
			break;
		case "Roadblock":
			desc = "Someone blocked the path ahead, time for a 'shortcut.' Oops! You're Lost!";
			break;
		}
	}
	
	public String getType() {
		// TODO Auto-generated method stub
		return type;
	}
	public String getDesc(){
		return desc;
	}

}
